<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'row g-2' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h3>Sign Up</h3>

  <div className="row g-2 m-0">
    <div className="col-md">
      <p className="fs-6 text-center">
        Already have an account <%= link_to "Log in", new_session_path(resource_name) %>
      </p>
    </div>
  </div>

  <div class="row g-2">
    <div class="col-md">
      <div class="form-floating">
        <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control', placeholder:'Name' %>
        <%= f.label :name %>
      </div>
    </div>
  </div>

  <div class="row g-2">
    <div class="col-md">
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder:'name@example.com' %>
        <%= f.label :email %>
      </div>
    </div>
  </div>

  <div class="row g-2">
    <div class="col-md">
      <div class="form-floating">
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control', placeholder:'Password' %>
        <%= f.label :password %>
      </div>
    </div>
  </div>

  <div class="row g-2">
    <div class="col-md">
      <div class="form-floating">
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: 'new-password', class: 'form-control', placeholder:'Confirm Password' %>
        <%= f.label :password %>
      </div>
    </div>
  </div>

  <div className="row g-2">
    <div className="col-md">
      <%= f.submit "Sign up", class: 'btn btn-primary btn-block w-100' %>
    </div>
  </div>
<% end %>
